{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.15.0/.schema/devbox.schema.json",
  "packages": [
    "ruby@3.4",
    "python@3.13",
    "nodejs@23",
    "tree@latest",
    "git@latest",
    "btop@latest",
    "neovim@latest",
    "fastfetch@latest",
    "ripgrep@latest",
    "fzf@latest",
    "unzip@latest",
    "fd@latest",
    "eza@latest",
    "whois@latest",
    "wget@latest",
    "curl@latest",
    "inetutils@latest",
    "tldr@latest",
    "lazygit@latest",
    "yarn@latest"
  ],
  "env_from": "devbox.env",
  "env": {
    "FOO": "bar"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      ". $VENV_DIR/bin/activate",
      "source $DEVBOX_PROJECT_ROOT/aliases.sh"
    ],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  }
}
